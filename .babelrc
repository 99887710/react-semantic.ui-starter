{
	"plugins": [
		"lodash",
		[
			"transform-runtime",
			{
				"helpers": false,
				"polyfill": false,
				"regenerator": true,
				"moduleName": "babel-runtime"
			}
		],
		"transform-decorators-legacy",
		"syntax-dynamic-import"
	],
	"presets": ["es2015", "react", "stage-0"],
	"env": {
		"production": {
			"presets": ["react-optimize"]
		},
		"development": {
			"plugins": [
				"react-hot-loader/babel",
				[
					"babel-plugin-webpack-alias",
					{
						"config": "./webpack_config/client/webpack.base.js",
						"findConfig": true
					}
				]
			]
		},
		"test": {
			"plugins": [
				[
					"babel-plugin-webpack-alias",
					{
						"config": "./webpack_config/webpack.isomorphic.js",
						"findConfig": true
					}
				]
			]
		}
	}
}
